<h4 class="add-comment">Add a comment</h4>

 <%= form_for [wiki, comment] do |f| %>
   <div class="form-group">
     <%= f.label :body, class: 'sr-only' %>
     <%= f.text_field :body, class: 'form-control input-field', placeholder: "Enter a new comment" %>
   </div>
   <%= f.submit "Submit Comment", class: 'btn btn-default pull-right' %>
 <% end %>
