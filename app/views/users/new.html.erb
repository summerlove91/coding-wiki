<div class="main-background">
  <div class="jumbotron main-background-2">
    <div class="main-signup-text">
      <div class="sign-up-box">
        <h2>Sign up</h2>
            <%= form_for @user do |f| %>
               <% if @user.errors.any? %>
                 <div class="alert alert-danger">
                   <h4><%= pluralize(@user.errors.count, "error") %>.</h4>
                   <ul>
                     <% @user.errors.full_messages.each do |msg| %>
                       <li><%= msg %></li>
                     <% end %>
                   </ul>
                 </div>
              <% end %>
             <%= form_group_tag(@user.errors[:name]) do %>
               <%= f.text_field :name, autofocus: true, class: 'input-field form-control', placeholder: "Enter name" %>
             <% end %>
             <%= form_group_tag(@user.errors[:email]) do %>
               <%= f.email_field :email, class: 'input-field form-control email-field', placeholder: "Enter email" %>
             <% end %>
             <%= form_group_tag(@user.errors[:password]) do %>
               <%= f.password_field :password, class: 'input-field form-control password-field', placeholder: "Enter password" %>
             <% end %>
             <%= form_group_tag(@user.errors[:password_confirmation]) do %>
               <%= f.password_field :password_confirmation, class: 'input-field form-control password-confirmation', placeholder: "Enter password confirmation" %>
             <% end %>
             <div class="form-group">
               <%= f.submit "Sign up", class: 'btn input-submit-button' %>
             </div>
             <% end %>
      </div>
    </div>
  </div>
</div>
